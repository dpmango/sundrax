// HEADER :: START
header.header.is-white
  .container
    .header__wrapper
      a(href="homepage.html").header__logo
        +svgMono('logo')
      ul.header__menu
        include _menuContent

      .header__cta
        .header__socials
          ul.socials
            li.socials__button
              a(href="#")
                +svgMono('social-vk')
            li.socials__button
              a(href="#")
                +svgMono('social-facebook')

        // search
        .header__search(action="#" js-header-search data-target="/search.html")
          input(type="text")
          button(type="submit")
            +svgMono('search')

        // contacts
        .header__contacts
          a(href='tel:88006007189').header__phone-mobile
            +svgMono('phone')
          a(href='tel:88006007189').header__phone 8 800 600 71 89
          a(href='#modalCallback' js-popup).header__callback Обратный звонок

      .header__hamburger
        .hamburger.hamburger--squeeze(js-hamburger)
          .hamburger-box
            .hamburger-inner

// MOBILE NAVI
.mobile-navi
  .mobile-navi__wrapper
    ul.mobile-navi__menu(js-mobile-nav)
      include _menuContent
    .mobile-navi__cta
      a(href="mailto:help@sundrax.ru") help@sundrax.ru
