include ../utilities/_mixins
doctype html
html(lang="en")
  head
    include _head

  body
    // place where pjax bindings happen's
    #barba-wrapper
      block header
        include ../../components/header/_header

      // what should be changed with every pjax
      .page
        .page__content
          block content

        block footer
          include ../../components/footer/_footer
        block modals
          include ../../components/modals/_callback
          include ../../components/modals/_request

      block scripts
        include _scripts
